query II
WITH RECURSIVE tbl(a, b) USING KEY (a ; max(b)) AS (
	SELECT 1, 5
		UNION
	SELECT a, b - 1
	FROM tbl
	WHERE b > 0)
TABLE tbl;
----
1	5

query II
WITH RECURSIVE tbl(a, b) USING KEY (a ; avg(b)) AS (
	SELECT 1, 5
	  UNION
	SELECT a, b - 1
	FROM tbl
	WHERE b > 0)
TABLE tbl;
----
